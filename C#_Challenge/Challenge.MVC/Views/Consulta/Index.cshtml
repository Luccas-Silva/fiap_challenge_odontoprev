@model IEnumerable<Challenge.MVC.Models.ConsultaEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Consulta</h1>

<p>
    <a class="btn btn-outline-success fw-bold" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dateConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorMedioConsulta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorMedioConsulta)
            </td>
            <td>
                    <a class="btn btn-outline-warning fw-bold" asp-action="Edit" asp-route-id="@item.idConsulta">Edit</a> |
                    <a class="btn btn-outline-info fw-bold" asp-action="Details" asp-route-id="@item.idConsulta">Details</a> |
                    <a class="btn btn-outline-danger fw-bold" asp-action="Delete" asp-route-id="@item.idConsulta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
